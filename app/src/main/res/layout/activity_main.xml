<?xml version="1.0" encoding="utf-8"?>

<LinearLayout tools:context=".MainActivity" android:orientation="vertical" android:layout_height="match_parent" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#CEA8082D"
        android:minHeight="?attr/actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="The Local Plates App"
        android:textStyle="bold|italic"
        app:titleTextColor="?attr/colorOnPrimary" />

    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchViewMain"
        android:layout_width="384dp"
        android:layout_height="36dp"
        android:layout_margin="8dp"
        android:background="@color/white"
        android:outlineAmbientShadowColor="@android:color/holo_red_light"
        app:queryHint="search here"></androidx.appcompat.widget.SearchView>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CEA8082D"></View>


    <com.google.android.gms.maps.MapView
        android:id="@+id/mapViewMainActivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />



</LinearLayout>