<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.BusinessDetailsActivity">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageViewBusinessDetails"
        android:layout_width="179dp"
        android:layout_height="180dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.07"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textView2Owner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#FE897F"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:text="Owner"
        android:textSize="15dp"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toStartOf="@+id/imageViewBusinessDetails"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageViewBusinessDetails"
        tools:ignore="TextContrastCheck" />

    <TextView
        android:id="@+id/textViewOwnerB"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        app:layout_constraintEnd_toStartOf="@+id/imageViewBusinessDetails"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2Owner" />

    <TextView
        android:id="@+id/textViewLocation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#FE897F"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:text="Location"
        android:textSize="15dp"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toStartOf="@+id/imageViewBusinessDetails"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewOwnerB"
        tools:ignore="TextContrastCheck" />

    <TextView
        android:id="@+id/textViewBusinessDetails"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#FFC3BE"
        android:gravity="center_horizontal|center_vertical"
        android:text="Business page"
        app:layout_constraintBottom_toTopOf="@+id/imageViewBusinessDetails"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewLocationB"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        app:layout_constraintEnd_toStartOf="@+id/imageViewBusinessDetails"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewLocation" />

    <TextView
        android:id="@+id/textViewRating"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#FE897F"
        android:gravity="center_horizontal"
        android:text="Rating"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/imageViewBusinessDetails"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewLocationB"
        tools:ignore="TextContrastCheck" />

 <TextView
     android:id="@+id/textViewRatingB"
     android:layout_width="0dp"
     android:layout_height="wrap_content"
     android:gravity="center_horizontal"
     app:layout_constraintEnd_toEndOf="@+id/textViewLocationB"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintTop_toBottomOf="@+id/textViewRating" />

    <TextView
        android:id="@+id/textViewContact"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#FE897F"
        android:gravity="center_horizontal"
        android:textSize="15dp"
        android:text="Contact"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toStartOf="@+id/imageViewBusinessDetails"
        app:layout_constraintHorizontal_bias="0.58"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewRatingB"
        tools:ignore="TextContrastCheck" />

    <TextView
        android:id="@+id/textViewMailB"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        app:layout_constraintEnd_toStartOf="@+id/imageViewBusinessDetails"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewContact" />

    <TextView
        android:id="@+id/textViewPhoneB"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/divider5"
        app:layout_constraintEnd_toStartOf="@+id/imageViewBusinessDetails"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewMailB" />

    <View
        android:id="@+id/divider5"
        android:layout_width="409dp"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewBusinessDetails" />
</androidx.constraintlayout.widget.ConstraintLayout>